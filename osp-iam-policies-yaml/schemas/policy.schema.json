{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "version",
    "roles",
    "assignments"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "permissions"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "permissions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "resource",
                "actions"
              ],
              "properties": {
                "resource": {
                  "type": "string"
                },
                "actions": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "enum": [
                      "read",
                      "create",
                      "update",
                      "delete"
                    ]
                  }
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "assignments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "principal_type",
          "principal_id",
          "roles"
        ],
        "properties": {
          "principal_type": {
            "type": "string",
            "enum": [
              "user",
              "group",
              "service"
            ]
          },
          "principal_id": {
            "type": "string",
            "minLength": 3
          },
          "roles": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}